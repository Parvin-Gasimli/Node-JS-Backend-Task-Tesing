
<section class="page-image page-image-about md-padding">
    <h1 class="text-white text-center">Posts</h1>
</section>
<section id="aboutus" class="md-padding">
    <div class="container">
        {{>admin-nav}}
        <div class="clearfix my-3"></div>
        <div class="row">
         
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <td>ID</td>
                            <td>TITLE</td>
                            <td>CATEGORY</td>
                            <td>Edit</td>
                            <td>DELETE</td>
                        </tr>

                    </thead>
                    <tbody>
                        {{#each posts}}
                        <tr>
                            <td>ID</td>
                            <td>{{title}}</td>
                            <td>{{category.name}}</td>
                            <td>
                                <a class="btn btn-warning" href="/admin/post/edit/{{id}}" >EDIT</a>
                            </td>
                            <td>
                                 <form action="/admin/posts/{{id}}?_method=DELETE" method="post">

                                    <input type="hidden" name="_method"
                                    value="DELETE"
                                    >
                                    <button type="submit" class="btn btn-danger">
                                        DELETE
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</section>
